# AresBot Nginx 配置示例
# 复制到 /etc/nginx/conf.d/ares.your-domain.conf

server {
    listen 443 ssl http2;
    server_name ares.your-domain.com;

    # SSL 证书配置
    ssl_certificate /etc/letsencrypt/live/your-domain.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/your-domain.com/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # 前端静态文件目录
    root /var/www/aresbotv3;
    index index.html;

    # OAuth2 Proxy 端点
    location /oauth2/ {
        proxy_pass http://127.0.0.1:44180;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # OAuth2 Proxy 认证检查端点 (内部使用)
    location = /oauth2/auth {
        internal;
        proxy_pass http://127.0.0.1:44180;
        proxy_pass_request_body off;
        proxy_set_header Content-Length "";
        proxy_set_header X-Original-URI $request_uri;
    }

    # 后端 API - 需要认证
    location /api {
        # 认证检查
        auth_request /oauth2/auth;
        error_page 401 = /oauth2/sign_in;

        # 将用户信息传递给后端
        auth_request_set $user $upstream_http_x_auth_request_user;
        auth_request_set $email $upstream_http_x_auth_request_email;
        proxy_set_header X-Forwarded-User $user;
        proxy_set_header X-Forwarded-Email $email;

        # 代理到 API 服务
        proxy_pass http://127.0.0.1:48000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # API 文档 - 需要认证
    location /docs {
        auth_request /oauth2/auth;
        error_page 401 = /oauth2/sign_in;

        proxy_pass http://127.0.0.1:48000;
        proxy_set_header Host $host;
    }

    location /openapi.json {
        auth_request /oauth2/auth;
        error_page 401 = /oauth2/sign_in;

        proxy_pass http://127.0.0.1:48000;
        proxy_set_header Host $host;
    }

    # 健康检查 - 无需认证
    location /health {
        proxy_pass http://127.0.0.1:48000;
        proxy_set_header Host $host;
    }

    # 前端路由 - 需要认证
    location / {
        auth_request /oauth2/auth;
        error_page 401 = /oauth2/sign_in;

        # 将用户信息传递给前端 (可通过 JS 获取)
        auth_request_set $user $upstream_http_x_auth_request_user;
        auth_request_set $email $upstream_http_x_auth_request_email;
        add_header X-User $user;
        add_header X-Email $email;

        try_files $uri $uri/ /index.html;
    }
}

# HTTP 重定向到 HTTPS
server {
    listen 80;
    server_name ares.your-domain.com;
    return 301 https://$server_name$request_uri;
}
